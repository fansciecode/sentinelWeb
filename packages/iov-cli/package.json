{
  "name": "@iov/cli",
  "version": "0.9.3",
  "description": "Command line interface for iov core",
  "author": "IOV SAS <admin@iov.one>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/iov-core/tree/master/packages/iov-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "lint": "cross-env-shell \"tslint -t verbose --project . ${TSLINT_FLAGS}\"",
    "prebuild": "yarn format",
    "build": "tsc",
    "build-or-skip": "[ -n \"$SKIP_BUILD\" ] || yarn build",
    "test-node": "node jasmine-testrunner.js",
    "test-bin": "yarn build && ./bin/iov-cli",
    "test": "yarn build-or-skip && yarn test-node"
  },
  "bin": {
    "iov-cli": "bin/iov-cli"
  },
  "dependencies": {
    "@iov/core": "^0.9.3",
    "@iov/faucets": "^0.9.3",
    "argparse": "^1.0.10",
    "babylon": "^6.18.0",
    "colors": "^1.3.0",
    "diff": "^3.5.0",
    "leveldown": "^4.0.1",
    "recast": "^0.15.3",
    "ts-node": "^7.0.0",
    "typescript": "~3.1"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.34",
    "@types/babylon": "^6.16.3",
    "@types/diff": "^3.5.1"
  }
}
